{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jquery": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-undef": "error",
    "no-var": "error",
    "prefer-const": "error",
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "never"],
    "comma-dangle": ["error", "never"],
    "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0 }]
  },
  "overrides": [
    {
      "files": ["**/*.html"],
      "processor": "disable-html"
    }
  ],
  "settings": {
    "disable-html": {
      "rules": {}
    }
  },
  "globals": {
    // Objets natifs du navigateur
    "window": "readonly",
    "document": "readonly",
    "console": "readonly",
    "localStorage": "readonly",
    "sessionStorage": "readonly",
    "fetch": "readonly",
    "setTimeout": "readonly",
    "setInterval": "readonly",
    "clearTimeout": "readonly",
    "clearInterval": "readonly",
    "requestAnimationFrame": "readonly",
    "cancelAnimationFrame": "readonly",
    "CustomEvent": "readonly",
    "Event": "readonly",
    
    // Biblioth√®ques tierces
    "bootstrap": "readonly",
    "$": "readonly",
    "jQuery": "readonly",
    "flatpickr": "readonly",
    "Chart": "readonly",
    "moment": "readonly",
    "_": "readonly",
    "io": "readonly",
    "axios": "readonly",
    
    // Variables globales de l'application
    "AppConfig": "readonly",
    "MaintenanceUtils": "readonly",
    "MaintenanceConfig": "readonly",
    "MaintenanceManager": "readonly",
    "maintenanceAPI": "readonly",
    "maintenanceManager": "readonly",
    
    // Fonctions utilitaires globales
    "formatDate": "readonly",
    "formatMontant": "readonly",
    "showToast": "readonly",
    "editDepense": "readonly",
    "showDeleteModal": "readonly",
    "loadScript": "readonly"
  },
  "overrides": [
    {
      "files": ["**/*.js"],
      "excludedFiles": ["public/lib/**"],
      "rules": {
        "no-undef": "error"
      }
    },
    {
      "files": ["**/tests/**/*.js"],
      "env": {
        "mocha": true,
        "jest": true
      },
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ]
}
