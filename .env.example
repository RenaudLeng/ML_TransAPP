# ====================================
# CONFIGURATION DE L'APPLICATION
# ====================================

# Environnement (development, production, test)
NODE_ENV=production
PORT=3001

# ====================================
# BASE DE DONNÉES POSTGRESQL
# ====================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ml_transport
DB_USER=postgres
DB_PASSWORD=votre_mot_de_passe_securise
DB_DIALECT=postgres
DB_SSL=true # Activer en production avec un certificat SSL

# ====================================
# SÉCURITÉ
# ====================================
# JWT
JWT_SECRET=votre_secret_jwt_tres_securise
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Cookies
COOKIE_SECURE=true # Activer en production avec HTTPS
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# Taux de limitation
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX=100 # 100 requêtes par fenêtre

# ====================================
# CORS
# ====================================
CORS_ORIGIN=https://votresite.com # Remplacer par votre domaine
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_CREDENTIALS=true

# ====================================
# SÉCURITÉ AVANCÉE
# ====================================
HELMET_ENABLED=true
XSS_ENABLED=true
HPP_ENABLED=true

# ====================================
# UPLOAD DE FICHIERS
# ====================================
UPLOAD_PATH=./public/uploads
MAX_FILE_UPLOAD=5 # en Mo

# ====================================
# EMAIL (Configuration SMTP)
# ====================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=email@example.com
SMTP_PASS=votre_mot_de_passe_email
SMTP_FROM='ML Transport <noreply@mltransport.com>'

# ====================================
# LOGGING
# ====================================
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE=logs/application.log

# ====================================
# MAINTENANCE
# ====================================
MAINTENANCE_MODE=false

# ====================================
# AUTRES
# ====================================
# Clé API Google Maps (optionnel)
GOOGLE_MAPS_API_KEY=votre_cle_api_google_maps
